<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <navigation-rule>
		<from-view-id>index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>USER_NOT_FOUND</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
		<from-view-id>registracija.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>USER_NOT_FOUND</from-outcome>
			<to-view-id>registracija.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>	    
    <navigation-rule>
		<from-view-id>home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>list_flight.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>	  
    
   <navigation-rule>
		<from-view-id>rezervacija.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>sediste_rezervisano.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>	   

	<navigation-rule>
		<from-view-id>list_flight.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{user.cancelPassenger(passenger)}</from-action>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>cancel.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>list_passenger.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>    
    
    <navigation-rule>
		<from-view-id>list_passenger.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{user.cancelFlight(flight)}</from-action>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>cancel.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>list_flight.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>  
        
    <navigation-rule>
		<from-view-id>cancel.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{user.cancelCurrentReservation()}</from-action>
			<to-view-id>sediste_otkazano.xhtml</to-view-id>
		</navigation-case>
    </navigation-rule>  
    
    <navigation-rule>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>ACCESS_DENIED</from-outcome>
    		<to-view-id>index.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{user.logout}</from-action>
    		<to-view-id>index.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>	
</faces-config>
